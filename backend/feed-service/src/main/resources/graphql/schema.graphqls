type FeedPost {
    id: ID!
    authorId: String!
    content: String
    imageUrl: String
    createdAt: String
    likesCount: Int
    commentsCount: Int
    sharesCount: Int
    originalPostId: ID
    originalAuthorId: String
    originalContent: String
}

type Query {
    getFeed: [FeedPost]
    getUserPosts(authorId: String!): [FeedPost]
}

type Mutation {
    createPost(content: String!, imageUrl: String): FeedPost
}
